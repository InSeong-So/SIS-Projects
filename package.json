{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0",
    "@babel/core": "7.15.5",
    "@babel/plugin-transform-runtime": "7.16.0",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-typescript": "7.16.0",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.1.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.1.1",
    "jest-plugin-context": "2.9.0",
    "prettier": "2.4.0",
    "typescript": "4.4.4",
    "babel-loader": "8.2.3",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.5.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.4.3",
    "resolve-url-loader": "4.0.0",
    "sass": "1.42.1",
    "sass-loader": "12.1.0",
    "style-loader": "3.3.0",
    "url-loader": "4.1.1",
    "webpack": "5.61.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.4.0"
  },
  "dependencies": {
    "@babel/runtime": "7.16.0"
  },
  "scripts": {
    "prebuild": "git clean -fdx packages -e packages/*/node_modules",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint --cache --ignore-path .gitignore ./packages/*/src/**.jsx",
    "lint:ts": "yarn tslint -c tslint.json -p tsconfig-lint.json --fix",
    "test": "jest",
    "build": "yarn tsc -b && lerna run build:webpack",
    "dev": "lerna run dev --stream",
    "deploy": "gh-pages -d packages/router/dist"
  }
}
